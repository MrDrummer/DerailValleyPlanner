

<MudSelect T="int" Label="@Label" Value="Index" ValueChanged="IndexChanged" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
    @for (var index = 0; index < Count; index++)
    {
        var i = index;
        <MudSelectItem Value="@i" Disabled="@(i == Exclude)">@(@i + 1)</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public string Label { get; set; }
    
    [Parameter]
    public int Exclude { get; set; }

    [Parameter]
    public int Index { get; set; }
    
    [Parameter]
    public int Count { get; set; }
    
    [Parameter]
    public EventCallback<int> IndexChanged { get; set; }
}